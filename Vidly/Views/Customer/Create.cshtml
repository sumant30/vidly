@model Vidly.ViewModels.CustomerViewModel
@{
    ViewBag . Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Create Customer</h2>

@using ( Html . BeginForm ( "Save" , "Customer" ) )
{   @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        @Html.LabelFor( x => x . Name )
        @Html.TextBoxFor( x => x . Name , new { @class = "form-control" } )
    </div>
    <div class="form-group">
        @Html.LabelFor( x => x . BirthDate )
        @Html.TextBoxFor( x => x . BirthDate , new { @class = "form-control" } )
    </div>
    <div class="form-group">
        @Html.LabelFor( x => x.MembershipTypeId )
        @Html.DropDownListFor( x => x.MembershipTypeId , new SelectList ( Model.MembershipTypes , "Id" , "Name" ) ,
           "Select Membership Type" , new { @class = "form-control" } )
    </div>
    <div class="checkbox">
       <label>
        @Html.CheckBoxFor( x => x.IsSubscribedToNewsLetter ) Subscribed to Newsletter?
       </label>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
}

