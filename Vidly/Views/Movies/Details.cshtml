@model Vidly.Models.MovieViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre</li>
    <li>Release Date: @Html.DisplayFor( x => x.ReleaseDate )</li>
    <li>Date Added: @Html.DisplayFor(x => x.DateAdded)</li>
</ul>

